<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:local="using:Sensed.ViewModels"
             xmlns:views="using:Sensed.Views"
             x:Class="Sensed.Views.AccountView"
             x:DataType="local:AccountViewModel" x:CompileBindings="True">

  <Grid>
    <views:ProfileView DataContext="{Binding ViewModel}" />
    <Grid Background="Red" VerticalAlignment="Top" HorizontalAlignment="Right">
      <Button Foreground="White" Content="Изменение профиля" Command="{Binding OpenProfileEditCommand}" x:CompileBindings="False" />
      <Button Foreground="WhiteSmoke" Content="Настройки приложения и поиска" Margin="0,70,20,0" Command="{Binding OpenSettingsCommand}" x:CompileBindings="False" />
    </Grid>
  </Grid>
</UserControl>
